@model ThesisDatenbank.Models.Thesis

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Thesis bearbeiten</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Bachelor" /> @Html.DisplayNameFor(model => model.Bachelor)
                </label>
            </div>
            <div class="mb-3 form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Master" /> @Html.DisplayNameFor(model => model.Master)
                </label>
            </div>
            <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" asp-items="@Html.GetEnumSelectList<Thesis.StatusType>()" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StudentName" class="form-label"></label>
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StudentEMail" class="form-label"></label>
                <input asp-for="StudentEMail" class="form-control" />
                <span asp-validation-for="StudentEMail" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StudentId" class="form-label"></label>
                <input asp-for="StudentId" class="form-control" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StudentProgram" class="control-label"></label>
                <select asp-for="StudentProgramId" class="form-control" asp-items="@Html.GetEnumSelectList<ProgramModel.ProgramType>()">
                    <option value="-1">--- Auswählen ---</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Registration" class="form-label"></label>
                <input asp-for="Registration" class="form-control" />
                <span asp-validation-for="Registration" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Filing" class="form-label"></label>
                <input asp-for="Filing" class="form-control" />
                <span asp-validation-for="Filing" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Summary" class="form-label"></label>
                <input asp-for="Summary" class="form-control" />
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Strengths" class="form-label"></label>
                <input asp-for="Strengths" class="form-control" />
                <span asp-validation-for="Strengths" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Weaknesses" class="form-label"></label>
                <input asp-for="Weaknesses" class="form-control" />
                <span asp-validation-for="Weaknesses" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Evaluation" class="form-label"></label>
                <input asp-for="Evaluation" class="form-control" />
                <span asp-validation-for="Evaluation" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ContentVal" class="form-label"></label>
                <input asp-for="ContentVal" class="form-control" />
                <span asp-validation-for="ContentVal" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LayoutVal" class="form-label"></label>
                <input asp-for="LayoutVal" class="form-control" />
                <span asp-validation-for="LayoutVal" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StructureVal" class="form-label"></label>
                <input asp-for="StructureVal" class="form-control" />
                <span asp-validation-for="StructureVal" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StyleVal" class="form-label"></label>
                <input asp-for="StyleVal" class="form-control" />
                <span asp-validation-for="StyleVal" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LiteratureVal" class="form-label"></label>
                <input asp-for="LiteratureVal" class="form-control" />
                <span asp-validation-for="LiteratureVal" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DifficultyVal" class="form-label"></label>
                <input asp-for="DifficultyVal" class="form-control" />
                <span asp-validation-for="DifficultyVal" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NoveltyVal" class="form-label"></label>
                <input asp-for="NoveltyVal" class="form-control" />
                <span asp-validation-for="NoveltyVal" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="RichnessVal" class="form-label"></label>
                <input asp-for="RichnessVal" class="form-control" />
                <span asp-validation-for="RichnessVal" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ContentWt" class="form-label"></label>
                <input asp-for="ContentWt" class="form-control" />
                <span asp-validation-for="ContentWt" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LayoutWt" class="form-label"></label>
                <input asp-for="LayoutWt" class="form-control" />
                <span asp-validation-for="LayoutWt" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StructureWt" class="form-label"></label>
                <input asp-for="StructureWt" class="form-control" />
                <span asp-validation-for="StructureWt" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StyleWt" class="form-label"></label>
                <input asp-for="StyleWt" class="form-control" />
                <span asp-validation-for="StyleWt" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LiteratureWt" class="form-label"></label>
                <input asp-for="LiteratureWt" class="form-control" />
                <span asp-validation-for="LiteratureWt" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DifficultyWt" class="form-label"></label>
                <input asp-for="DifficultyWt" class="form-control" />
                <span asp-validation-for="DifficultyWt" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="NoveltyWt" class="form-label"></label>
                <input asp-for="NoveltyWt" class="form-control" />
                <span asp-validation-for="NoveltyWt" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="RichnessWt" class="form-label"></label>
                <input asp-for="RichnessWt" class="form-control" />
                <span asp-validation-for="RichnessWt" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Grade" class="form-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Supervisor.Chair" class="form-label"></label>
                <select id="SelectChair" class="form-control" asp-items="ViewBag.Chairs">
                    <option value="-1">--- Auswählen ---</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Supervisor" class="form-label"></label>
                <select id="SelectSupervisor" asp-for="SupervisorId" class="form-control" asp-items="ViewBag.Supervisors">
                    <option value="-1">--- Auswählen ---</option>
                </select>
            </div>
            <div class="mb-3">
                <input type="submit" value="Speichern" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Abbrechen</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $("#SelectChair").on("change", function () {
                $.get("@Url.Action("GetSupervisorSelectList")", {
                    chairId: this.value
                },
                    function (data, status, jq) {
                        var items = "<option value='-1'>--- Auswählen ---</option>";
                        $(data).each(function () {
                            items += "<option value='" + this.value + "'>" + this.text + "</option>";
                        });
                        $("#SelectSupervisor").html(items);
                    });
            });

            $("#SelectSupervisor").on("change", function () {
                $.get("@Url.Action("GetChairId")", {
                    supervisorId: this.value
                },
                    function (data, status, jq) {
                        $("#SelectChair").val(data);
                    });
            });
        });
    </script>
}
